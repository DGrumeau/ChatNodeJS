extends ../layout

block content
  h1= 'List of Rooms'

  each room in rooms
    a(href='/room/' + room.slug)= room.name
    span= ' ---  ' + room.numberOfUsers + ' user(s)   -   '
    if room.creator.username == user.username || ['admin', 'super-admin'].includes(user.role) 
      a(href= '/room/' + room._id + '/delete')
        i(class="fas fa-trash-alt")
    br

  .panel.panel-default
          .panel-heading
              form.form-horizontal(action="/room/create", method="POST")
                  .form-group
                      .label.col-md-2(for="room")
                      .input-group
                          input#room(name="name", type="text", placeholder="Room name")
                          input.btn.btn-default(type="submit", value="Go !")