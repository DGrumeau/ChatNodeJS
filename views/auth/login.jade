extends ../layout

block content
    .container
        .row
            .col-md-4
            .col-md-4
                .card(style="padding: 20px; text-align: center")
                    form(action="/auth/login", method="POST", style="text-align: center;")
                        .form-group
                            input(type='text', name='username' class='form-control', placeholder='Pseudo',required, autofocus)
                        .form-group
                            input(type='password', name='password' class='form-control', placeholder='Mot de passe', required)
                        .form-group
                            button(class='btn btn-primary btn-block', type='submit') Connexion
                    a(href='/auth/signup') Cr√©er un compte
                    br
                    .form-group
                        a.btn.btn-block.btn-social.btn-twitter(href="/auth/login/twitter")
                            span.fa.fa-twitter
                            |  Se connecter avec Twitter
                            .form-group
                        a.btn.btn-block.btn-social.btn-twitter(href="/auth/auth/google")
                            span.fa.fa-twitter
                            |  Se connecter avec Google
                    .form-group
                        a.btn.btn-block.btn-social.btn-facebook(href="/auth/facebook")
                            span.fa.fa-facebook
                            |  Se connecter avec Facebook
            .col-md-4